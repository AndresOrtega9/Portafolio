@model Portafolio.Models.Contacto

@{
    ViewData["Title"] = "Contacto";
}

<div class="text-center">
    <h1>Contacto</h1>
</div>
<div class="row justify-content-center bg-primary">
    <div class="col col-md-3 contacto">
        <form asp-action="Contacto">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Nombre" class="control-label"></label>
                <input asp-for="Nombre" class="form-control" />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <label asp-for="Correo" class="control-label"></label>
                <input asp-for="Correo" class="form-control" placeholder="ejemplo@ejemplo.com"/>
                <span asp-validation-for="Correo" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <label asp-for="Mensaje" class="control-label"></label>
                <textarea asp-for="Mensaje" class="form-control"></textarea>
                <span asp-validation-for="Mensaje" class="text-danger"></span>
            </div>
            <br />

            <div class="form-group text-center">
                <input type="submit" value="Enviar" class="btn btn-light" />
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
